{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
  },
  "include": [
    "./src/**/*",
  ],
}